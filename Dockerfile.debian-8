FROM debian:8

RUN apt-get -q update \
    && apt-get -yq install --no-install-recommends \
      build-essential \
      libffi-dev \
      libssl-dev \
      python \
      python-dev \
      python-pip \
    && apt-get autoclean \
    && pip install --quiet --upgrade \
      ansible

WORKDIR /site

CMD ["ansible-playbook", "--help"]
